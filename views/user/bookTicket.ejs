<%= layout("./layouts/boilerplate") %>
<h1>Let's Book a ticket</h1>



<form onsubmit="calculateFare(event)" action="/user/book-ticket" method="post">
    <div>
        <select onchange="loadDestination()" name="beginningPoint" id="beginningPointSelect" class="form-select">
            <option selected>Choose a starting point</option>
            <% for(let station of stations){ %>
                <option value="<%= station._id %>"><%= station.stationName %></option>
                <% } %>
        </select>
    </div>

    <div class="mt-3">
        <select name="destination" id="destinationSelect" class="form-select">
            <option selected>Choose a Destination</option>
        </select>
    </div>
    <button>Submit</button>
</form>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Ticket Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="startStation" class="form-label">Starting Station:</label>
                    <p id="startStation" class="fw-bold"  readonly></p>
                </div>
                <div class="mb-3">
                    <label for="destination" class="form-label">Destination:</label>
                    <p id="destinationStation" class="fw-bold"  readonly></p>

                </div>
                <div class="mb-3">
                    <label for="fare" class="form-label">Fare:</label>
                    <p id="fare" class="fw-bold"  readonly></p>
                </div>
                <button id="bookTicketBtn" class="btn btn-primary">Book Ticket</button>
            </div>
        </div>
    </div>
</div>



<script src="/bookTicket.js"></script>